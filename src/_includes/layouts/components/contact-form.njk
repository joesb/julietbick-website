<form method="POST" action="/api/submit" class="site-form contact-form">

  <div class="form-group form-group--input">
    <label for="i-fullname">Your name<span class="required">*</span></label>
    <input id="i-fullname" type="text" name="name" pattern="[A-Za-z ]+" required />
  </div>

  <div class="form-group form-group--input">
    <label for="i-email">Your email address<span class="required">*</span></label>
    <input id="i-email" type="email" name="email" required />
  </div>

  <label id="honey" for="contact-name">Contact name
      <input type="text" id="contact-name" name="contact-name">
  </label>

  <hr />

  <div class="form-group form-group--input margin-block-start-md">
    <label for="i-subject">Message subject<span class="required">*</span></label>
    <input id="i-subject" type="text" name="subject" required />
  </div>
  
  <div class="form-group form-group--input form-group--radios margin-block-start-md">
    <p>Are you contacting me for â€¦?</p>
    
    <input id="i-topic-coaching" type="radio" name="topic" required /> <label for="i-topic-coaching">Coaching</label>
    <input id="i-topic-salt" type="radio" name="topic" required /> <label for="i-topic-salt">Speech and Language Therapy</label>
    <input id="i-topic-specialist-mentoring" type="radio" name="topic" required /> <label for="i-topic-specialist-mentoring">Specialist Mentoring</label>
  </div>

  <div class="form-group form-group--input margin-block-start-md">
    <label for="i-message">Your message<span class="required">*</span></label>
    <textarea id="i-message" name="message" required rows="5" cols="33"></textarea>
  </div>

  <div class="form-group form-group--submit">
    <button type="submit">Send message</button>
  </div>
</form>