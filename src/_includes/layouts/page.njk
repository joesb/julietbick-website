---
layout: base.njk
class:
  page:
    - content-canvas
    - page
    - type-page
image:
  listShowImg: true
  figClasses:
    - margin-block-end-lg
---

  {% if image.path %}
    {% ImgFigure image.caption, image.figClasses %}![{{ image.alt }}]({{ image.path }}){.image-rounded eleventy:widths="{{ image.widths }}" eleventy:formats="webp,jpg"}{% endImgFigure %}
  {% endif %}

{{ content | safe }}

{% if pagination.data %}
  {% include "layouts/components/pagination-articles.njk" %}

  {% if showPaginationNav !== false and pagination.pages | length > 1 %}
  {% include "layouts/components/pagination-pagination.njk" %}
  {% endif %}
{% endif %}